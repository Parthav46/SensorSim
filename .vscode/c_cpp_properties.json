{
    "env": {
        "arduinoVersion": "1.8.12",
        "esp8266Version": "2.6.3",
        "arduinoBase": "~/Documents/arduino-${arduinoVersion}/hardware",
        "arduinoLib": "~/Arduino/libraries",
        "esp8266Base": "~/.arduino15/packages/esp8266/hardware/esp8266/${esp8266Version}",
        "esp8266Tools": "~/.arduino15/packages/esp8266/tools/xtensa-lx106-elf-gcc/2.5.0-4-b40a506/"
    },
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}",

                "${arduinoBase}/tools/avr/avr/include",
                "${arduinoBase}/arduino/avr/cores/arduino",

                "${esp8266Base}/cores/esp8266",
                "${esp8266Base}/variants/nodemcu",
                "${esp8266Base}/tools/sdk/include",
                "${esp8266Base}/libraries/**",

                "${esp8266Tools}/xtensa-lx106-elf/include",
                "${esp8266Tools}/xtensa-lx106-elf/include/c++/4.8.2",
                "${esp8266Tools}/xtensa-lx106-elf/include/c++/4.8.2/xtensa-lx106-elf",

                "${arduinoLib}/**"
            ],
            "defines": [
            ],
            "compilerPath": "/usr/bin/avr-gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "clang-x64"
        }
    ],
    "version": 4
}